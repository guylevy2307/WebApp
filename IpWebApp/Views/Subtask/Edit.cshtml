@model IpWebApp.Models.Subtask

@{ ViewBag.Title = "Edit";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<link rel="stylesheet" href="~/Content/details-page.css">
<link rel="stylesheet" href="~/Content/edit-create-pages.css">

<main class="container">

    <div class="row mt-5">
        <h2 class="task-detail-heading">@Model.MainTask.Title | <span style="font-weight:normal">Subtask Details</span></h2>
    </div>
    <div class="row justify-content-center">
        <div class="form-panel-details">
            @using (Html.BeginForm("Edit", "Subtask", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
@Html.AntiForgeryToken()

                <div class="row edit-task-form">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.SubtaskId)
                    <div class="col">
                        <div class="form-group">
                            <label for="title" class="form-label-font-size normal-font-style">Title</label>
                            <input name="title" type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="title" value="@Html.DisplayFor(model => model.Title)">
                        </div>
                        <div class="form-group">
                            <label for="status" class="form-label-font-size normal-font-style">Status</label>
                            <input name="status" type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="status" value="@Html.DisplayFor(model => model.Status)">
                        </div>
                        <div class="form-group">
                            <label for="pricing" class="form-label-font-size normal-font-style">Pricing</label>
                            <input name="pricing" type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="pricing" value="@Html.DisplayFor(model => model.Pricing)">
                        </div>


                    </div>

                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Deadline, htmlAttributes: new { @class = "form-label-font-size normal-font-style" })
                            <input name="Deadline" type="date" class="form-control w-100 form-field-font-size mt-2 pb-2 px-0" id="next-action-date" placeholder="dd/MM/yyyy" value="@Html.DisplayFor(model => model.Deadline)">
                            @Html.ValidationMessageFor(model => model.Deadline, "", new { @class = "text-danger " })


                        </div>
                        <div class="form-group">
                            <label for="pricing" class="form-label-font-size normal-font-style">@Html.DisplayNameFor(model => model.Pricing)</label>
                            @Html.EditorFor(model => model.Pricing, new { htmlAttributes = new { @class = "form-control w-100 form-field-font-size mt-2 pb-2 px-0" } })
                            @Html.ValidationMessageFor(model => model.Pricing, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col"></div>
                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="form-submit d-flex   col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn-submit" />
                                        </div>
                                    </div>

                                </div>            }


        </div>
    </div>
</main>


