@model IpWebApp.Models.Task

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="~/Content/details-page.css">
<link rel="stylesheet" href="~/Content/edit-create-pages.css">


<main class="container">
    <div class="row">
        <div class="back">
            <a href="@Url.Action("Index", "Task", "Task")">< Tasks</a>
        </div>
    </div>
    <div class="form-panel-details">
    <div class="row edit-task-form">

            <div class="heading">
                <h3>Are you sure you want to delete this task?</h3>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="title" class="form-label-font-size normal-font-style">Title</label>
                    <input name="title" type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="title" value="@Html.DisplayFor(model => model.Title)" disabled>
                </div>
                <div class="form-group">
                    <label for="status" class="form-label-font-size normal-font-style">Status</label>
                    <input name="status" type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="status" value="@Html.DisplayFor(model => model.Status)" disabled>
                </div>
                <div class="form-group">
                    <label for="pricing" class="form-label-font-size normal-font-style">Pricing</label>
                    <input name="pricing" type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="pricing" value="@Html.DisplayFor(model => model.Pricing)" disabled>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Deadline, htmlAttributes: new { @class = "form-label-font-size normal-font-style" })
                    <input name="Deadline" type="date" class="form-control w-100 form-field-font-size mt-2 pb-2 px-0" id="next-action-date" placeholder="dd/MM/yyyy" value="@Html.DisplayFor(model => model.Deadline)" disabled>
                    @Html.ValidationMessageFor(model => model.Deadline, "", new { @class = "text-danger " })

                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="record" class="form-label-font-size normal-font-style">Record</label>
                    <input name="record-name" disabled type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="record-name" value="@Html.DisplayFor(model => model.Record.Name)" disabled>


                </div>
                <div class="form-group">
                    <label for="client-name" class="form-label-font-size normal-font-style">Client Name</label>
                    <input name="client-name" disabled type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="client-name" value="@Html.DisplayFor(model => model.Record.Client.Name)" disabled>

                </div>
                <div class="form-group">
                    <label for="assignee" class="form-label-font-size normal-font-style">Assignee</label>
                    <input name="assignee" disabled type="text" class="form-control form-field-font-size mt-2 pb-2 px-0" id="assignee" value="@Html.DisplayFor(model => model.Assignee)" disabled>

                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="description" class="form-label-font-size normal-font-style">Description</label>
                    <textarea name="description" class="description field-border w-100" id="description" style="height:175px" disabled>@Html.DisplayFor(model => model.Description)</textarea>

                </div>
            </div>
        </div>

 
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="form-submit d-flex justify-content-center">
                <!--<button class="btn-submit" type="submit" >Create</button>-->
                <input type="submit" value="Delete" class="btn-submit" />

            </div>
        }
    </div>
    </div>
       
   
</main>

