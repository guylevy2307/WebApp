                        <!-- <img src="https://via.placeholder.com/115x51" alt="">
                        </a>
                    </div>
                    -->
                <div class="row" style="padding-right:0px;padding-left:0px;margin-right:0px;margin-left:0px">
                    <div class="flex-column px-0 header-height bg-white" style="width:10%">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/Images/i-pwebapp-logo.svg" class="pt-3" style="padding-left:20px">
                        </a>
                    </div>
                    <div class="flex-column" style="width:90%; padding-left:0px; padding-right:0px">
                        <div class="col nav-wrapper d-flex justify-content-between header-height">
                            <nav class="nav d-flex align-items-center">

                                <a class="nav-btn header-client-link " href="@Url.Action("Index", "Client", "Client")">Clients</a>
                                <a class="nav-btn header-applicant-link " href="@Url.Action("Index", "Applicant", "Applicant")">Applicants</a>
                                <a class="nav-btn header-record-link " href="@Url.Action("Index", "Record", "Record")">Records</a>
                                <a class="nav-btn header-task-link " href="@Url.Action("Index", "Task", "Task")">Tasks</a>
                                <a class="nav-btn header-task-link " href="@Url.Action("Index", "Locations", "Locations")">Locations</a>
                                <a class="nav-btn header-task-link " href="@Url.Action("StockMarket", "Home", "")">Stock Market</a>
                                @*@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@

                                @*<a class="nav-btn" href="@Url.Action("Index", "TamplateTasks", "TamplateTasks")">Tamplate Task</a>*@
                                <!--
    -->
                                <!--@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })-->
                            </nav>
                            <div class="user d-flex align-items-center" style="margin-right:39px">
                                <span id="email" class="email"></span>
                                <a class="nav-btn" href="@Url.Action("Settings", "Home")">
                                    <img src="~/Images/settings-icon.svg">
                                </a>
                                <div class="profile-div">
                                    <div role="button" id="dropdownLogOffButton" data-toggle="dropdown" data-offset="15 10" aria-haspopup="true" aria-expanded="false">
                                        <img src="~/Images/user.svg" alt="user icon">
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <div class="dropdown-menu" aria-labelledby="dropdownLogOffButton">

                                            <a class="dropdown-item" href="@Url.Action("Login", "Account")">Log Off</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="menu dropleft d-flex justify-content-end">
                                <div class="add-btn" role="button" id="dropdownMenuButton" data-toggle="dropdown" data-offset="15 10" aria-haspopup="true" aria-expanded="false">
                                    <span>+</span>
                                </div>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="@Url.Action("Create", "Client")">Add Client</a>
                                    <a class="dropdown-item" href="@Url.Action("Create", "Record")">Add Record</a>
                                    <a class="dropdown-item" href="@Url.Action("Create", "Task")">Add Task</a>
                                    <a class="dropdown-item" href="@Url.Action("Create", "TamplateTasks")">Add Tamplate Task</a>
                                    <a class="dropdown-item" href="@Url.Action("Create", "Locations")">Add Location </a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Upload")">Add Data</a>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
        </header>

        <div class="container" >
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - The Gang</p>
            </footer>
        </div>

      @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>

    <script>
        (function () {
            let navBtns = document.getElementsByClassName('nav-btn');

            Array.from(navBtns).forEach(btn => btn.addEventListener('click', (e) => {
                //e.preventDefault();
                const activeBtn = document.querySelector('.nav-btn.active');
                activeBtn.classList.toggle('active');
                btn.classList.toggle('active');
            }));
        })();
    </script>



