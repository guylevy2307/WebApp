@model IpWebApp.Models.Applicant

@{
    ViewBag.Title = "Delete";
}
<link rel="stylesheet" href="~/Content/details-page.css">
<link rel="stylesheet" href="~/Content/edit-create-pages.css">

<main class="container">
    <div class="row">
        <div class="back">
            <a href="@Url.Action("Index", "Applicant", "Applicant")">< Applicants</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-panel-details">
            <div class="heading">
                <h3>Are you sure you want to delete this applicant?</h3>
            </div>
            <div class="row edit-task-form">
                <div class="col-4">
                    <div class="form-group">
                        <label for="title">Name</label>
                        <input name="title" type="text" class="form-control" id="title" value="@Html.DisplayFor(model => model.ApplicantName )" disabled>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone number</label>
                        <input name="phone" type="text" class="form-control" id="phone" value="@Html.DisplayFor(model => model.Phone)" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Address">Address</label>
                        <input name="Address" type="text" class="form-control" id="Address" value="@Html.DisplayFor(model => model.Address)" disabled>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="Formation">Formation</label>
                        <input name="Formation" type="text" class="form-control" id="Formation" value="@Html.DisplayFor(model => model.Formation)" disabled>
                    </div>
                    <div class="form-group">
                        <label for="POA">POA</label>
                        <input name="POA" contact type="text" class="form-control" id="POA" value="@Html.DisplayFor(model => model.POA)" disabled>
                    </div>
                    
                </div>
                

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="form-submit d-flex justify-content-center">
                    <!--<button class="btn-submit" type="submit" >Create</button>-->
                    <input type="submit" value="Delete" class="btn-submit" />

                </div>
            }

        </div>
    </div>
    </div>
</main>


