@model IpWebApp.Models.Applicant

@{ ViewBag.Title = "Details"; }

<link rel="stylesheet" href="~/Content/edit-create-pages.css">
<link rel="stylesheet" href="~/Content/details-page.css">
<link rel="stylesheet" href="~/Content/style.css">

@using (Html.BeginForm("Edit", "Applicant"))
{

<div>
    <main class="container">
        <div class="row">
            <div class="back">
                <a href="@Url.Action("Index", "Applicant", "Applicant")">< Applicants</a>
            </div>
        </div>
        <div class="row mt-5">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <h2><span id="applicant-name">@Html.DisplayFor(model => model.ApplicantName)</span></h2>
        </div>

        <div class="row justify-content-center" style="margin-right: 20px">
            <div class="form-panel-details">

                <form id="edit-applicant-form">

                    <div class="row ">

                        <div>
                            <ul class="nav nav-tabs navbar-brand pb-0">
                                <li>
                                    <a href="#tab_1" data-toggle="tab" class="text-secondary active"> General </a>
                                </li>
                                <li>
                                    <a href="#tab_2" data-toggle="tab" class="text-secondary"> Records </a>
                                </li>
                            </ul>
                            <div class="tab-content">

                                @Html.AntiForgeryToken()
                                <div class="tab-pane  active form-tab-details " id="tab_1">
                                    @Html.Partial("_ApplicantDetailsGeneralPartial", @Model)

                                </div>

                                <div class="tab-pane fade  form-tab-details" id="tab_2">
                                    @Html.Partial("_ApplicantDetailsRecordsPartial", @Model)

                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="form-submit flex-column">
                                <input type="submit" value="Save" class="btn-submit p-0" style="float: right; width: 120px; height: 43px" />
                            </div>
                        </div>
                    </div>

                </form>
            </div>

        </div>

    </main>
</div>}