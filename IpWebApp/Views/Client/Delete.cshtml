@model IpWebApp.Models.Client

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="~/Content/details-page.css">
<link rel="stylesheet" href="~/Content/edit-create-pages.css">

<main class="container">
    <div class="row">
        <div class="back">
            <a href="@Url.Action("Index", "Client", "Client")">< Clients</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-panel-details">
            <div class="heading">
                <h3>Are you sure you want to delete this client?</h3>
            </div>
            <div class="row edit-task-form">
                <div class="col-4">
                    <div class="form-group">
                        <label for="title">Name</label>
                        <input name="title" type="text" class="form-control" id="title" value="@Html.DisplayFor(model => model.Name)" disabled>
                    </div>
                    <div class="form-group">
                        <label for="vat">VAT Number</label>
                        <input name="vat" type="text" class="form-control" id="vat" value="@Html.DisplayFor(model => model.VatNumber)" disabled>
                    </div>
                    <div class="form-group">
                        <label for="pricing">Balance</label>
                        <input name="pricing" type="text" class="form-control" id="pricing" value="@Html.DisplayFor(model => model.Balance)" disabled>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="deadline">Contact Name</label>
                        <input name="deadline" type="text" class="form-control" id="deadline" value="@Html.DisplayFor(model => model.ContactName)" disabled>
                    </div>
                    <div class="form-group">
                        <label for="contact">Contact Email</label>
                        <input name="contact"contact type="text" class="form-control" id="contact" value="@Html.DisplayFor(model => model.ContactEmail)" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Position">Contact Position</label>
                        <input name="Position" type="text" class="form-control" id="Position" value="@Html.DisplayFor(model => model.ContactPosition)" disabled>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="notes">Notes</label>
                        <input name="notes" type="text" class="form-control" id="notes" value="@Html.DisplayFor(model => model.Notes)" disabled>
                    </div>
                    </div>
                </div>
             




                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    <div class="form-submit d-flex justify-content-center">
                        <!--<button class="btn-submit" type="submit" >Create</button>-->
                        <input type="submit" value="Delete" class="btn-submit" />

                    </div>
                }

            </div>
        </div>
    </div>
</main>

