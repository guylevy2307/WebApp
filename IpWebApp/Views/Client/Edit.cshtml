@model IpWebApp.Models.Client

@{ ViewBag.Title = "Edit"; }


<link rel="stylesheet" href="~/Content/edit-create-pages.css">
<link rel="stylesheet" href="~/Content/details-page.css">

@using (Html.BeginForm("Edit", "Client"))
{

@Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ClientId)
                                                <div>
                                                    <main class="container">

                                                        <div class="row">
                                                            <div class="back">
                                                                <a href="@Url.Action("Index", "Client", "Client")">< Clients</a>
                                                            </div>
                                                        </div>
                                                        <div class="row mt-5">
                                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                            <h2><span id="client-name">@Html.DisplayFor(model => model.Name)</span></h2>
                                                        </div>

                                                        <div class="row justify-content-center" style="margin-right:20px">
                                                            <div class="form-panel-details">

                                                                <form id="edit-client-form">

                                                                    <div class="row ">

                                                                        <div class="tab-content">
                                                                            <ul class="nav nav-tabs  pb-0  ">
                                                                                <li>
                                                                                    <a href="#tab_1" data-toggle="tab" class="text-secondary active"> General </a>
                                                                                </li>
                                                                                <li>
                                                                                    <a href="#tab_2" data-toggle="tab" class="text-secondary"> Billing </a>
                                                                                </li>
                                                                                <li>
                                                                                    <a href="#tab_3" data-toggle="tab" class="text-secondary"> Records </a>
                                                                                </li>
                                                                                <li>
                                                                                    <a href="#tab_4" data-toggle="tab" class="text-secondary"> Tasks </a>
                                                                                </li>
                                                                                <li>
                                                                                    <a href="#tab_5" data-toggle="tab" class="text-secondary"> Applicants </a>
                                                                                </li>
                                                                                <li>
                                                                                    <a href="#tab_6" data-toggle="tab" class="text-secondary "> Location </a>
                                                                                </li>
                                                                            </ul>

                                                                            <div class="tab-content">
                                                                                <div class="tab-pane  active form-tab-details " id="tab_1">
                                                                                    @Html.Partial("_ClientDetailsGeneralPartial", @Model)

                                                                                </div>
                                                                                <div class="tab-pane fade  form-tab-details" id="tab_2">
                                                                                    @Html.Partial("_ClientDetailsBillingPartial", @Model)

                                                                                </div>
                                                                                <div class="tab-pane fade form-tab-details" id="tab_3">
                                                                                    @Html.Partial("_ClientDetailsRecordsPartial", @Model)
                                                                                </div>
                                                                                <div class="tab-pane fade  form-tab-details" id="tab_4">
                                                                                    @{ Html.RenderAction("TasksByClientIdPartial", "Client", new { id = Model.ClientId }); }
                                                                                </div>
                                                                                <div class="tab-pane fade  form-tab-details" id="tab_5">
                                                                                    @{ Html.RenderAction("ApplicantsByClientIdPartial", "Client", new { id = Model.ClientId }); }
                                                                                </div>
                                                                                @*   <div class="tab-pane fade  form-tab-details" id="tab_6">
            @{ Html.RenderAction("LocationByClientIdPartial", "Locations", new { id = Model.ClientId }); }
        </div>
                                                                                *@
                                                                            </div>
                                                                        </div>

                                                                    </div>
                                                                    <div class="row justify-content-center">
                                                                        <div class="form-submit flex-column">
                                                                            <input type="submit" value="Save" class="btn-submit p-0" style="float:right; width:120px; height:43px" />
                                                                        </div>



                                                                    </div>
                                                                </form>
                                                            </div>

                                                        </div>

                                                    </main>
                                                </div>}
