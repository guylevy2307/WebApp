@model IpWebApp.Models.Client

<link rel="stylesheet" href="~/Content/edit-create-pages.css">
<link rel="stylesheet" href="~/Content/details-page.css">
<div class="row">


    <div class="col-4">
        <div class="form-group">
            @Html.LabelFor(model => model.BillingName, htmlAttributes: new { @class = "form-label-font-size normal-font-style" })
            @Html.EditorFor(model => model.BillingName, new { htmlAttributes = new { @class = "form-control form-field-font-size mt-2 pb-2 px-0" } })
            @Html.ValidationMessageFor(model => model.BillingName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Currency, htmlAttributes: new { @class = "control-label form-label-font-size normal-font-style" })
            @Html.EnumDropDownListFor(model => model.Currency, htmlAttributes: new { @class = "form-control p-0", @style="margin-top:2px" })
            @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="col-4 second-col-wrapper px-0">

        <div class="form-group">
            @Html.LabelFor(model => model.BillingEmail, htmlAttributes: new { @class = "form-label-font-size normal-font-style" })
            @Html.EditorFor(model => model.BillingEmail, new { htmlAttributes = new { @class = "form-control form-field-font-size mt-2 pb-2 px-0" } })
            @Html.ValidationMessageFor(model => model.BillingEmail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "form-label-font-size normal-font-style" })
            @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control form-field-font-size mt-2 pb-2 px-0" } })

        </div>

    </div>
</div>