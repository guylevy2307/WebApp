
@{
    ViewBag.Title = "Settings";
}
<link rel="stylesheet" href="~/Content/settings-page.css">
<main class="container" style="margin-top:115px">
    
    <div class="row justify-content-center">
        <h2 class="heading normal-font-style" style="padding-left:0px;">Settings</h2>
    </div>
    <div class="row justify-content-center mt-1" style="margin-right:20px">

        <div class="form-panel-create form-panel-settings">
            <form id="add-record-form">
                <div class="d-flex">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-width">
                        <div class="form-group">
                            @Html.Label("Setting 1", new { @class = "form-label-font-size normal-font-style" })
                            @Html.TextBox("Setting1", "", new { @class = "form-control form-field-font-size mt-2 pb-2 px-0 normal-font-style" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Setting 2", new { @class = "form-label-font-size normal-font-style" })
                            @Html.TextBox("Setting2", "", new { @class = "form-control form-field-font-size mt-2 pb-2 px-0 normal-font-style" })
                        </div>
                    </div>
                    <div class="col-width col-wrapper">
                        <div class="form-group">
                            @Html.Label("Setting 3", new { @class = "form-label-font-size normal-font-style" })
                            @Html.TextBox("Setting3", "", new { @class = "form-control form-field-font-size mt-2 pb-2 px-0 normal-font-style" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Setting 4", new { @class = "form-label-font-size normal-font-style" })
                            @Html.TextBox("Setting4", "", new { @class = "form-control form-field-font-size mt-2 pb-2 px-0 normal-font-style" })
                        </div>
                    </div>
                    <div class="col-width col-wrapper">
                        <div class="form-group">
                            @Html.Label("Setting 5", new { @class = "form-label-font-size normal-font-style" })
                            @Html.TextBox("Setting5", "", new { @class = "form-control form-field-font-size mt-2 pb-2 px-0 normal-font-style" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Setting 6", new { @class = "form-label-font-size normal-font-style" })
                            @Html.TextBox("Setting6", "", new { @class = "form-control form-field-font-size mt-2 pb-2 px-0 normal-font-style" })
                        </div>
                    </div>


                </div>
                <div class="row">
                    <div class="form-submit flex-column">
                        <input type="submit" value="Save" class="btn-submit p-0" style="float:right; width:120px; height:43px" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>