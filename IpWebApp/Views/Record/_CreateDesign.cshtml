@model IpWebApp.Models.Record

<div class="form-group">
    @Html.LabelFor(model => model.Classes, htmlAttributes: new { @class = "control-label col-md-4 form-label-font-size" })
    <div class="col-md-12">
        @Html.EditorFor(model => model.Classes, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Classes, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group" id="ExpirationDateHolder">
    @Html.LabelFor(model => model.ExpirationDate, htmlAttributes: new { @class = "control-label col-md-4 form-label-font-size" })@*, htmlAttributes: new { @class = "control-label col-md-2" })*@
    <div class="col-md-12">
        <input name="ExpirationDate" type="date" class="form-control w-100" id="Expiration-date" placeholder="dd/MM/yyyy" value="@Html.DisplayFor(model => model.ExpirationDate)">
        @Html.ValidationMessageFor(model => model.ExpirationDate, "", new { @class = "text-danger " })
    </div>
</div>