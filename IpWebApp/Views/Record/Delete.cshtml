@model IpWebApp.Models.Record

@{
    ViewBag.Title = "Delete";
}


<link rel="stylesheet" href="~/Content/details-page.css">
<link rel="stylesheet" href="~/Content/edit-create-pages.css">


<main class="container">
    <div class="row">
        <div class="back">
            <a href="@Url.Action("Index", "Record", "Record")">< Records</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-panel-details">
            <div class="heading">
                <h3>Are you sure you want to delete this record?</h3>
            </div>
            <div class="row edit-task-form">
                <div class="col-4">
                    <div class="form-group">
                        <label for="title">Name</label>
                        <input name="title" type="text" class="form-control" id="title" value="@Html.DisplayFor(model => model.Name)">
                    </div>
                    <div class="form-group">
                        <label for="status">Client</label>
                        <input name="status" type="text" class="form-control" id="status" value="@Html.DisplayFor(model => model.Client.Name)">
                    </div>
                    <div class="form-group">
                        <label for="pricing">Status</label>
                        <input name="pricing" type="text" class="form-control" id="pricing" value="@Html.DisplayFor(model => model.Status)">
                    </div>
                    <div class="form-group">
                        <label for="deadline">Registration Number</label>
                        <input name="deadline" type="text" class="form-control" id="deadline" value="@Html.DisplayFor(model => model.RegistrationNumber)">
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label for="type">Record Type</label>
                        <input name="type" disabled type="text" class="form-control" id="type" value="@Html.DisplayFor(model => model.Type)">
                    </div>

                    <div class="form-group">
                        <label for="country">Country</label>
                        <input name="country" disabled type="text" class="form-control" id="country" value="@Html.DisplayFor(model => model.Country)">
                    </div>
                    <div class="form-group">
                        <label for="Notes">Notes</label>
                        <input name="Notes" type="text" class="form-control" id="Notes" value="@Html.DisplayFor(model => model.Notes)">
                    </div>
                  

                </div>




                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    <div class="form-submit d-flex justify-content-center">
                        <!--<button class="btn-submit" type="submit" >Create</button>-->
                        <input type="submit" value="Delete" class="btn-submit" />

                    </div>
                }

            </div>
        </div>
    </div>
</main>
